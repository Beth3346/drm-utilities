                    @include drm-thumbnail(white, 150px, 125px, 0);
                    @include drm-thumbnail(white, 150px, 125px, 5px);
                    @include drm-thumbnail(white, 150px, null, round);
                
                .argument-list
                    h2.drm-bold Arguments:
                    ul.drm-unstyled-list
                        li $border-color: defaults to white
                        li $width: defaults to 150px
                        li $height: defaults to 125px
                        li $border-radius: defaults to o for 90 degree corners - for a circular image enter round