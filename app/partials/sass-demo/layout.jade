                pre @include elr-center-block($width);

    .elr-container
        .elr-row
            .elr-col-full
                h3.elr-bold Horizontally Center
                p Horizontally centers an element using absolute positioning and translate
                .example-holder.horizontal-container
                    .horizontally-center

    .elr-container
        .elr-row
            .elr-col-full
                h3.elr-bold Vertically Center
                p Vertially centers an element using absolute positioning and translate
                .example-holder.vertical-container
                    .vertically-center
