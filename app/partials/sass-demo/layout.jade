section#layout
    .elr-container
        .elr-row
            .elr-col-full
                h3.elr-bold Clear Fix
                p A modern clearfix alternative to overflow: hidden
                pre @include elr-clearfix();

    .elr-container
        .elr-row
            .elr-col-full
                h3.elr-bold Em Margin
                p Converts px margin to ems; enter value only - no units
                h3.elr-bold Arguments:
                ul.elr-unstyled-list
                    li $top: enter value only - no units
                    li $right: enter value only - no units
                    li $bottom: enter value only - no units
                    li $left: enter value only - no units
                pre @include elr-em-margin(10, 20, 10, 20);

    .elr-container
        .elr-row
            .elr-col-full
                h3.elr-bold Em Padding
                p Converts px padding to ems; enter value only - no units
                h3.elr-bold Arguments:
                ul.elr-unstyled-list
                    li $top: enter value only - no units
                    li $right: enter value only - no units
                    li $bottom: enter value only - no units
                    li $left: enter value only - no units
                pre @include elr-em-padding(10, 20, 10, 20);
    .elr-container
        .elr-row
            .elr-col-full
                h3.elr-bold Center Block
                p horizontally centers an element within its container using display block and margin auto.
                .example-holder
                    .center-block
