section#elr-simple-slider
    .elr-container
        .elr-row
            .elr-col-full
                h2.example-heading Elr Simple Slider
                p A simple content slider. Content fades in and out
            .elr-col-full
                h3.example-subheading Slider with Fade Effect
            .elr-col-full.example-holder
                .elr-simple-slider
                    .elr-simple-slider-nav
                        button.elr-simple-slide-prev(data-dir= 'prev')
                            i.fa.fa-chevron-left
                        button.elr-simple-slide-next(data-dir= 'next')
                            i.fa.fa-chevron-right
                    .elr-simple-slide-holder
                        .elr-simple-slide
                            figure.elr-simple-slide-img
                                img(src='/images/cat.jpg')
                                figcaption This is an image of slide 1 kittens are cute
