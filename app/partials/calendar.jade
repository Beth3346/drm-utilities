section
    h1 Calendar

    p Interative JS Calendar

    h2 Live Demo

    .drm-calendar(data-month="March" data-date="24" data-year="2015" data-event-name="My Birthday" data-event-month="March", data-event-date="24", data-event-recurrance="yearly")
        button.drm-show-event-form.button-solid-radius(type="button") Add New Event
        form.drm-calendar-new-event#drm-calendar-new-event(method="get" action="" role="form")
            label(for="event_name") Event Name:
            input#name(type="text" name="event_name" required data-min-length="3" data-max-length="50")
            h3.drm-bold Event Recurrance:
            .drm-inline-control-group
                label(for="recurrance") Recurrance
                select#recurrance(name="recurrance")
                    option(value="none") None
                    option(value="daily") Daily
                    option(value="weekly") Weekly
                    option(value="biweekly") Bi-Weekly
                    option(value="monthly") Monthly
                    option(value="yearly") Yearly
            .drm-inline-control-group
                label(for="month") Month:
                select#month(name="month")
                    option(value="") Select Month
                    option(value="January") January
                    option(value="February") February
                    option(value="March") March
                    option(value="April") April
                    option(value="May") May
                    option(value="June") June
                    option(value="July") July
                    option(value="August") August
                    option(value="September") September
                    option(value="October") October
                    option(value="November") November
                    option(value="December") December
                label(for="event_date") Date:
                input.drm-valid-integer#eventDate(type="text" name="event_date" data-min-value="1" data-max-value="31" data-min-length="1" data-max-length="2")
                label(for="year") Year:
                input.drm-valid-integer#year(type="text" name="year" data-min-value="1" data-min-length="4" data-max-length="4")
                label(for="time") Time:
                input.drm-valid-time#time(type="text" name="time" placeholder="12:00pm")

            .drm-inline-control-group
                .drm-control-group
                    label
                        input.day-checkbox#day(type="checkbox" name="day" value="Sunday")
                        | Sunday
                    label
                        input.day-checkbox#day(type="checkbox" name="day" value="Monday")
                        | Monday
                    label
                        input.day-checkbox#day(type="checkbox" name="day" value="Tuesday")
                        | Tuesday
                    label
                        input.day-checkbox#day(type="checkbox" name="day" value="Wednesday")
                        | Wednesday
                    label
                        input.day-checkbox#day(type="checkbox" name="day" value="Thursday")
                        | Thursday
                    label
                        input.day-checkbox#day(type="checkbox" name="day" value="Friday")
                        | Friday
                    label
                        input.day-checkbox#day(type="checkbox" name="day" value="Saturday")
                        | Saturday

            .drm-inline-control-group
                label(for="day_num") Week Number
                select#dayNum(name="day_num")
                    option(value="") Select Week
                    option(value="1") First
                    option(value="2") Second
                    option(value="3") Third
                    option(value="4") Fourth
                    option(value="last") Last

            h3.drm-bold Event Details:
            label(for="event_type") Event Type:
            input#type(type="text" name="event_type" placeholder="holiday")
            label(for="event_notes") Event Type:
            textarea#notes(name="event_notes" cols="30" rows="2" placeholder="These are some notes") 

            button.addEvent#submit(type="submit") Add Event

        form.drm-calendar-select#drm-calendar-select(method="Get" action="" role="form")
            .drm-inline-control-group 
                label(for="month") Month:
                select#month(name="month")
                    option(value="") Select Month
