section#time-utilities
    .elr-container
        .elr-row
            .elr-col-full
                h1 Time Utilities
                p A series of methods that make it easier to work with dates and times.

    .elr-container
        .elr-row
            .elr-col-full
                h3 Now
                p Returns a new date object with the exact date and time.
                p.now
                pre var now = elrTime.now;
            .elr-col-full
                h3 Today
                p Returns an object with the exact date and time
                pre.
                    var today = elrTime.today;
                    today.month // 4
                    today.day // 0
                    today.date // 31
                    today.year // 2015
                    today.hour // 19
                    today.minute // 47
                    today.second // 43
            .elr-col-full
                h3 Days Per Week
                p Number of days in a week.
                pre.
                    var daysPerWeek = elrTime.daysPerWeek; // 7

            .elr-col-full
                h3 Unit Tokens
                p Unit tokens for use in date formatting.
                pre.
                    var tokens = elrTime.unitTokens;
                    tokens.ms // millisecond
                    tokens.s // second
                    tokens.m // minute
                    tokens.h // hour
                    tokens.d // day
                    tokens.D // date
                    tokens.w // week
                    tokens.M // month
                    tokens.Q // quarter
                    tokens.y // year
                    tokens.DDD // dayOfYear
                    tokens.a // ampm

